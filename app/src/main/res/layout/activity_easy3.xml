<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Easy3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/kodyImage"
            android:layout_width="48dp"
            android:layout_height="80dp"
            android:layout_weight="0.71"
            android:src="@drawable/kody" />

        <Button
            android:id="@+id/lv3Btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="    " />

        <Button
            android:id="@+id/lv3Btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="    " />

        <Button
            android:id="@+id/lv3Btn3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="    " />

        <Button
            android:id="@+id/lv3Btn4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="    " />

        <Button
            android:id="@+id/lv3upBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/up"
            android:contentDescription="up" />

        <Button
            android:id="@+id/lv3downBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/down"
            android:contentDescription="down" />

        <Button
            android:id="@+id/lv3leftBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/left"
            android:contentDescription="left" />

        <Button
            android:id="@+id/lv3rightBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/right"
            android:contentDescription="right" />
        <!--
               <Button
                   android:id="@+id/rectBtn"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:background="@drawable/ic_play_arrow_black_24dp"
                   android:onClick="setRect" />
       -->


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/go"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:background="@drawable/play"
            android:text="" />

        <TextView
            android:id="@+id/lv3tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.project3.DrawEasy3
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFEB3B" />

        <ImageView
            android:id="@+id/kody"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="237dp"
            app:srcCompat="@drawable/kody" />

    </RelativeLayout>




</LinearLayout>